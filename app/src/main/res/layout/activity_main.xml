<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrieluliano.my_sick_app.home.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout">

        <ImageButton
            android:layout_width="96dp"
            android:layout_height="89dp"
            app:srcCompat="@drawable/defaultuserpic"
            android:scaleType="fitXY"
            android:id="@+id/imageButton5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="318dp"
            android:layout_above="@+id/linearLayout2">

            <TextView
                android:id="@+id/name"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="name" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="email" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="YOUR IMAGES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_weight="1"
        android:layout_marginBottom="323dp"
        android:layout_marginTop="107dp"
        android:layout_above="@+id/btnLogout"
        android:layout_marginStart="135dp"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="132dp"
        android:id="@+id/mainList"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="61dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbhome"
            android:id="@+id/iv_home"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbsearch"
            android:id="@+id/iv_search"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbnew"
            android:id="@+id/iv_photo"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nblocation"
            android:id="@+id/iv_location"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbusero"
            android:id="@+id/iv_user"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
