<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_food_or_clothes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabrieluliano.my_sick_app.FoodOrClothesActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="222dp"
        android:layout_below="@+id/men">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbhome"
            android:id="@+id/iv_home"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbsearcho"
            android:id="@+id/iv_search"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbnew"
            android:id="@+id/iv_photo"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nblocation"
            android:id="@+id/iv_location"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nbuser"
            android:id="@+id/iv_user"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:text="Women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="111dp"
        android:id="@+id/women"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <Button
        android:text="Men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/women"
        android:layout_marginTop="28dp"
        android:id="@+id/men"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_alignStart="@+id/women" />
</RelativeLayout>
